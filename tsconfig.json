{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": ["src/components", "src/custom.d.ts"]
}