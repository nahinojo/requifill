{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "index.js" // exclude index.js from the default include pattern
    ]
}