{

  "manifest_version": 2,
  "name": "Requifill",
  "version": "0.0.0",
  "description": "Autofills KFS Requisition forms",
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com"
    }
  },

  "browser_action" : {
    "default_popup" : "/index.html"
  },

  "content_scripts": [
    {
      "matches": ["https://systems.oit.uci.edu/kfs/purapRequisition.do*"],
      "js": ["context_scripts/autofill.js"]
    }
  ],

  "permissions" : ["storage"]
}
